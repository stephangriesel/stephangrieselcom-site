const { data } = await res.json();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>stephangriesel.com</title>
  </head>
  <body class="grid place-items-center min-h-screen bg-black text-white">
    <section class="grid place-items-center min-h-screen">
      <h1>stephangriesel.com</h1>
      <div>
        {data.map((i) => <Hero data={i} />)}
      </div>
      <div>
        <div class="flex">
          <Title />
          {data.map((i) => <SocialLinks data={i} />)}
        </div>
      </div>
      <footer>
        &copy;
        <script>
          new Date().getFullYear() > 2010 &&
            document.write(" " + new Date().getFullYear());
        </script>
      </footer>
    </section>
  </body>
</html>
