---
import Hero from "../components/Hero.astro";
import SocialLinks from "../components/SocialLinks.astro";
import Title from "../components/Title.astro";
import VisitorCounter from "../components/VisitorCounter.astro";
import MidiPlayer from "../components/MidiPlayer.astro";
import "../styles/global.css";

// FAKE DATA FOR TESTING
// HERO DATA
const heroData = {
  name: "Stephan Griesel",
  icon: "",
  link: "",
  status: "enabled",
};

// SOCIAL DATA
const data = [
  {
    name: "Facebook",
    icon: "fab fa-facebook",
    link: "https://facebook.com/stephan.griesel",
    status: "disabled",
  },
  {
    name: "Instagram",
    icon: "fab fa-instagram",
    link: "https://www.instagram.com/stephangriesel",
    status: "disabled",
  },
  {
    name: "LinkedIn",
    icon: "fab fa-linkedin",
    link: "https://www.linkedin.com/in/stephangriesel/",
    status: "disabled",
  },
  {
    name: "BeReal",
    icon: "fas fa-camera",
    link: "https://bere.al/stephangriesel",
    status: "disabled",
  },
  {
    name: "GitHub",
    icon: "fab fa-github",
    link: "https://github.com/stephangriesel",
    status: "disabled",
  },
];

const pageTitle = heroData.name;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>{pageTitle}</title>
    <style>
      body {
        font-family: Verdana, Geneva, sans-serif;
        background-color: #000000; /* Black */
        background-image: url("data:image/svg+xml,%3Csvg width='200' height='200' viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.15'/%3E%3C/svg%3E");
        margin: 0;
        padding: 20px;
        color: #ffffff;
      }
      .page-container {
        width: 900px;
        margin: 0 auto;
        background-color: #1a1a1a;
        border: 1px solid #808080;
        box-shadow: 0 0 10px rgba(0, 255, 0, 0.2);
        display: flex;
      }
      .sidebar {
        width: 220px;
        background-color: #202020; /* Dark Gray */
        border-right: 2px solid #808080;
        padding: 15px;
        text-align: center;
        flex-shrink: 0;
      }
      .main-content {
        flex-grow: 1;
        padding: 20px;
        background-color: #000000;
        background-image: none;
      }
      h1,
      h2,
      h3 {
        font-family: "Courier New", Courier, monospace;
        color: #00ff00; /* Neon Green */
        border-bottom: 1px solid #00ff00;
        padding-bottom: 5px;
      }
      h1 {
        font-size: 24px;
        text-shadow: 0 0 5px #00ff00;
      }
      h2 {
        font-size: 18px;
        margin-top: 20px;
      }

      /* Links handled by global.css */

      .nav-header {
        font-weight: bold;
        margin-top: 20px;
        margin-bottom: 5px;
        color: #ffff00; /* Yellow */
        text-align: left;
        padding-left: 10px;
        font-family: "Courier New", Courier, monospace;
      }
      .nav-list {
        list-style-type: square;
        text-align: left;
        padding-left: 25px;
        margin: 0;
      }
      .nav-list li {
        margin-bottom: 5px;
      }

      .updates-table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #00ff00;
        font-size: 12px;
        margin-bottom: 20px;
        color: #ffffff;
      }
      .updates-table th {
        background-color: #003300;
        border: 1px solid #00ff00;
        padding: 5px;
        text-align: left;
        color: #00ff00;
      }
      .updates-table td {
        border: 1px solid #00ff00;
        padding: 5px;
        vertical-align: top;
      }

      .marquee-box {
        background-color: #000000;
        color: #00ff00;
        border: 1px solid #00ff00;
        padding: 2px;
        margin-bottom: 15px;
        font-family: "Courier New", monospace;
      }

      .webring-widget {
        margin-top: 30px;
        border: 1px solid #00ff00;
        background-color: #000000;
        padding: 5px;
        font-size: 10px;
        color: #00ff00;
      }

      .blink {
        animation: blinker 1s linear infinite;
        color: #00ff00;
      }
      @keyframes blinker {
        50% {
          opacity: 0;
        }
      }
    </style>
  </head>
  <body>
    <div class="page-container">
      <!-- SIDEBAR -->
      <div class="sidebar">
        <div class="mb-4">
          <Hero data={heroData} />
        </div>

        <div class="nav-header">Navigation</div>
        <div
          class="nav-list"
          style="display: flex; flex-direction: column; gap: 5px; padding-left: 0;"
        >
          <a href="#" class="win95-btn" style="width: 100%;">Home</a>
          <a href="/guestbook" class="win95-btn" style="width: 100%;"
            >Guestbook</a
          >
          <a
            href="mailto:hello@stephangriesel.com"
            class="win95-btn"
            style="width: 100%;">Email Me</a
          >
        </div>

        <div class="nav-header">Connect</div>
        <div style="padding-left: 0;">
          {data.map((i: (typeof data)[0]) => <SocialLinks data={i} />)}
        </div>

        <VisitorCounter />
        <MidiPlayer />

        <br />
        <img
          src="https://web.archive.org/web/20091027073724/http://geocities.com/clipart/pbi/c.gif"
          alt="construction"
        />
      </div>

      <!-- MAIN CONTENT -->
      <div class="main-content">
        <div class="marquee-box">
          <marquee
            >*** WELCOME TO STEPHAN GRIESEL'S HOMEPAGE *** CREATED IN THE 90'S
            AND NOT MOBILE RESPONSIVE *** SIGN MY GUESTBOOK! ***</marquee
          >
        </div>

        <h1>Welcome to my World!</h1>
        <p>
          Hi! I'm Stephan. This is my personal corner of the World Wide Web.
          Here you will find everything about me, my hobbies, and my life.
          Thanks for stopping by!
        </p>

        <center>
          <img
            src="/uc.png"
            alt="Under Construction"
            style="width: 50%; margin-bottom: 20px;"
          />
        </center>

        <h2>What's New</h2>
        <table class="updates-table">
          <tr>
            <th style="width: 80px;">Date</th>
            <th>Update</th>
          </tr>
          <tr>
            <td>Dec 12</td>
            <td>
              Upgraded the <b>MIDI Player</b> with multi-instrument support and a
              scrolling song title! Also applied a <b>Windows 95/98 UI</b> overhaul
              with beveled buttons and standard link colors.
            </td>
          </tr>
          <tr>
            <td>Dec 11</td>
            <td>
              Added a <b>Real Visitor Counter</b> and upgraded the <b
                >Guestbook</b
              > to save entries to Google Sheets!
            </td>
          </tr>
          <tr>
            <td>Dec 10</td>
            <td
              >Redesigned the site with a cool new layout! Added "About Me"
              section.</td
            >
          </tr>
        </table>

        <h2>About Me</h2>
        <p>
          I am a web enthusiast living in the digital age. I like playing
          guitar, going to gigs and surfing the net. My favorite browser is
          Netscape Navigator.
        </p>

        <h2>My Interests</h2>
        <ul>
          <li><b>Music</b>: Rock, Metal, Blues, Jazz</li>
          <li><b>Movies</b>: Ace Ventura, Wayne's World, The Goonies</li>
          <li><b>Bands</b>: Megadeth, Slayer, ACDC</li>
          <li><b>Computer Programming</b>: HTML, CSS, JavaScript</li>
        </ul>

        <hr style="border: 0; border-top: 1px solid #808080; margin: 20px 0;" />

        <center>
          <div
            class="flex justify-center gap-2 mb-4"
            style="display: flex; justify-content: center; gap: 10px; align-items: center;"
          >
            <img src="/netscapenow.gif" alt="Netscape Now!" />
            <img src="/ie5.gif" alt="Internet Explorer 5.0" />
          </div>

          <div style="font-size: 10px; color: #666;">
            Last Updated: {new Date().toLocaleDateString("en-GB")}<br />
            &copy; 1999-2025 Stephan Griesel. All rights reserved.
          </div>
        </center>
      </div>
    </div>
  </body>
</html>
