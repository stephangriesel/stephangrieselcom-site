---
import Hero from "../components/Hero.astro";
import SocialLinks from "../components/SocialLinks.astro";
import Title from "../components/Title.astro";
import VisitorCounter from "../components/VisitorCounter.astro";
import "../styles/global.css";

// HERO DATA
const heroData = {
    name: "Stephan Griesel",
    icon: "",
    link: "",
    status: "enabled",
};

// SOCIAL DATA
const data = [
    {
        name: "Facebook",
        icon: "fab fa-facebook",
        link: "https://facebook.com/stephan.griesel",
        status: "disabled",
    },
    {
        name: "Instagram",
        icon: "fab fa-instagram",
        link: "https://www.instagram.com/stephangriesel",
        status: "disabled",
    },
    {
        name: "LinkedIn",
        icon: "fab fa-linkedin",
        link: "https://www.linkedin.com/in/stephangriesel/",
        status: "disabled",
    },
    {
        name: "BeReal",
        icon: "fas fa-camera",
        link: "https://bere.al/stephangriesel",
        status: "disabled",
    },
    {
        name: "GitHub",
        icon: "fab fa-github",
        link: "https://github.com/stephangriesel",
        status: "disabled",
    },
];

const pageTitle = "Sign My Guestbook";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
            integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />
        <title>{pageTitle}</title>
        <style is:global>
            body {
                font-family: Verdana, Geneva, sans-serif;
                background-color: #000000; /* Black */
                background-image: url("data:image/svg+xml,%3Csvg width='200' height='200' viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.15'/%3E%3C/svg%3E");
                margin: 0;
                padding: 20px;
                color: #ffffff;
            }
            .page-container {
                width: 900px;
                margin: 0 auto;
                background-color: #1a1a1a;
                border: 1px solid #808080;
                box-shadow: 0 0 10px rgba(0, 255, 0, 0.2);
                display: flex;
            }
            .sidebar {
                width: 220px;
                background-color: #202020; /* Dark Gray */
                border-right: 2px solid #808080;
                padding: 15px;
                text-align: center;
                flex-shrink: 0;
            }
            .main-content {
                flex-grow: 1;
                padding: 20px;
                background-color: #000000;
                background-image: none;
            }
            h1,
            h2,
            h3 {
                font-family: "Courier New", Courier, monospace;
                color: #00ff00; /* Neon Green */
                border-bottom: 1px solid #00ff00;
                padding-bottom: 5px;
            }
            h1 {
                font-size: 24px;
                text-shadow: 0 0 5px #00ff00;
            }
            h2 {
                font-size: 18px;
                margin-top: 20px;
            }

            /* Links handled by global.css */

            .nav-header {
                font-weight: bold;
                margin-top: 20px;
                margin-bottom: 5px;
                color: #ffff00; /* Yellow */
                text-align: left;
                padding-left: 10px;
                font-family: "Courier New", Courier, monospace;
            }
            .nav-list {
                list-style-type: square;
                text-align: left;
                padding-left: 25px;
                margin: 0;
            }
            .nav-list li {
                margin-bottom: 5px;
            }

            .webring-widget {
                margin-top: 30px;
                border: 1px solid #00ff00;
                background-color: #000000;
                padding: 5px;
                font-size: 10px;
                color: #00ff00;
            }

            .blink {
                animation: blinker 1s linear infinite;
                color: #00ff00;
            }
            @keyframes blinker {
                50% {
                    opacity: 0;
                }
            }

            /* Guestbook Specific Styles */
            .guestbook-form {
                border: 1px solid #00ff00;
                padding: 15px;
                background-color: #111;
                margin-bottom: 30px;
            }
            .form-group {
                margin-bottom: 15px;
            }
            label {
                display: block;
                margin-bottom: 5px;
                color: #00ff00;
                font-family: "Courier New", Courier, monospace;
            }
            .guestbook-form input,
            .guestbook-form textarea {
                width: 100%;
                padding: 5px;
                background-color: #000 !important;
                border: 1px solid #808080;
                color: #fff !important;
                font-family: Verdana, sans-serif;
            }
            /* Buttons handled by global.css */
            .entry {
                border: 1px solid #808080;
                padding: 10px;
                margin-bottom: 15px;
                background-color: #111;
            }
            .entry-header {
                border-bottom: 1px solid #333;
                padding-bottom: 5px;
                margin-bottom: 5px;
                font-size: 12px;
                color: #ffff00;
            }
            .entry-body {
                font-family: "Courier New", Courier, monospace;
            }
        </style>
    </head>
    <body>
        <div class="page-container">
            <!-- SIDEBAR -->
            <div class="sidebar">
                <div class="mb-4">
                    <Hero data={heroData} />
                </div>

                <div class="nav-header">Navigation</div>
                <div
                    class="nav-list"
                    style="display: flex; flex-direction: column; gap: 5px; padding-left: 0;"
                >
                    <a href="/" class="win95-btn" style="width: 100%;">Home</a>
                    <a href="/guestbook" class="win95-btn" style="width: 100%;"
                        >Guestbook</a
                    >
                    <a
                        href="mailto:hello@stephangriesel.com"
                        class="win95-btn"
                        style="width: 100%;">Email Me</a
                    >
                </div>

                <div class="nav-header">Connect</div>
                <div style="padding-left: 0;">
                    {
                        data.map((i: (typeof data)[0]) => (
                            <SocialLinks data={i} />
                        ))
                    }
                </div>

                <VisitorCounter />

                <br />
                <img
                    src="https://web.archive.org/web/20091027073724/http://geocities.com/clipart/pbi/c.gif"
                    alt="construction"
                />
            </div>

            <!-- MAIN CONTENT -->
            <div class="main-content">
                <h1>Sign My Guestbook</h1>
                <p>Please leave a message! I love hearing from visitors.</p>

                <div class="guestbook-form">
                    <form id="sheetdb-form">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input
                                type="text"
                                id="name"
                                name="data[name]"
                                placeholder="Your Name"
                                required
                            />
                        </div>
                        <div class="form-group">
                            <label for="message">Message:</label>
                            <textarea
                                id="message"
                                name="data[message]"
                                rows="4"
                                placeholder="Write a note..."
                                required></textarea>
                        </div>
                        <input
                            type="hidden"
                            name="data[date]"
                            id="date-field"
                        />
                        <button type="submit" id="submit-btn" class="win95-btn"
                            >Post Entry</button
                        >
                    </form>
                </div>

                <h2>Previous Signatures</h2>
                <div id="entries-container">
                    <p class="loading">Loading entries...</p>
                </div>

                <script is:inline>
                    const API_URL = "https://sheetdb.io/api/v1/l77h4w5jhegwy";
                    const form = document.getElementById("sheetdb-form");
                    const container =
                        document.getElementById("entries-container");
                    const submitBtn = document.getElementById("submit-btn");

                    // 1. Function to Load Entries
                    async function loadEntries() {
                        try {
                            const response = await fetch(API_URL);
                            const data = await response.json();

                            // Clear the "Loading..." text
                            container.innerHTML = "";

                            // Reverse the array so newest shows first
                            data.reverse().forEach((entry) => {
                                // Only show entry if it has a message
                                if (!entry.message) return;

                                const div = document.createElement("div");
                                div.className = "entry";
                                div.innerHTML = `
                        <div class="entry-header">
                            <b>${escapeHtml(entry.name)}</b> wrote on ${entry.date || "Just now"}:
                        </div>
                        <div class="entry-body">${escapeHtml(entry.message)}</div>
                    `;
                                container.appendChild(div);
                            });
                        } catch (error) {
                            console.error("Error loading entries:", error);
                            container.innerHTML =
                                "<p>Failed to load guestbook.</p>";
                        }
                    }

                    // 2. Handle Form Submission
                    form.addEventListener("submit", async (e) => {
                        e.preventDefault();

                        // Set button to loading state
                        submitBtn.textContent = "Posting...";
                        submitBtn.disabled = true;

                        // Add current date to the hidden date field
                        const now = new Date();
                        document.getElementById("date-field").value =
                            now.toLocaleDateString("en-US", {
                                month: "short",
                                day: "2-digit",
                                year: "numeric",
                            });

                        const formData = new FormData(form);

                        try {
                            await fetch(API_URL, {
                                method: "POST",
                                body: formData,
                            });

                            // Reset form and reload entries
                            form.reset();
                            submitBtn.textContent = "Post Entry";
                            submitBtn.disabled = false;
                            loadEntries(); // Refresh the list immediately
                        } catch (error) {
                            alert("Error posting message. Please try again.");
                            submitBtn.textContent = "Post Entry";
                            submitBtn.disabled = false;
                        }
                    });

                    // 3. Security Helper (Prevents HTML injection attacks)
                    function escapeHtml(text) {
                        if (!text) return "";
                        return text
                            .replace(/&/g, "&amp;")
                            .replace(/</g, "&lt;")
                            .replace(/>/g, "&gt;")
                            .replace(/"/g, "&quot;")
                            .replace(/'/g, "&#039;");
                    }

                    // Load entries when page opens
                    loadEntries();
                </script>

                <center>
                    <div
                        style="font-size: 10px; color: #666; margin-top: 50px;"
                    >
                        &copy; 1999-2025 Stephan Griesel. All rights reserved.
                    </div>
                </center>
            </div>
        </div>
    </body>
</html>
